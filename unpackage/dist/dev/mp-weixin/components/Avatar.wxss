.avatar {
  padding: 0 10%;
  height: 600rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  -webkit-transition: all 0.5s ease;
  transition: all 0.5s ease;
}
.avatar_selected {
  -webkit-transform: translate3d(0, 40rpx, 0);
          transform: translate3d(0, 40rpx, 0);
  opacity: 0;
}
.avatar_face {
  height: 120rpx;
  width: 120rpx;
  border-radius: 100%;
  overflow: hidden;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.2);
}
.avatar_face image {
  display: block;
  width: 100%;
  height: 100%;
}
.avatar_name {
  margin-top: 80rpx;
  padding: 0 3%;
  font-size: 50rpx;
  letter-spacing: 2rpx;
  font-weight: 500;
}
.avatar_tips {
  margin-top: 30rpx;
  padding: 0 3%;
  font-size: 26rpx;
  font-weight: 200;
  opacity: 0.8;
  line-height: 1.6em;
}
.month-picker {
  margin-top: 80rpx;
  margin-bottom: 20rpx;
  padding: 0 3%;
  font-size: 32rpx;
}

